set nocompatible

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

set wrap
set linebreak
set number
set showcmd
filetype indent on
filetype indent plugin on
set wildmenu
set lazyredraw
set showmatch
set noshiftround

set nostartofline

set backspace=indent,eol,start

set hidden
set ttyfast

set ignorecase
set smartcase

set t_Co=256

set laststatus=2

set hlsearch
set incsearch

set nobackup

syntax on

set modelines=0
set novisualbell

set encoding=utf-8

map <C-H> <C-W>h<C-W>_
map <C-J> <C-W>j<C-W>_
map <C-K> <C-W>k<C-W>_
map <C-L> <C-W>l<C-W>_

nnoremap j gj
nnoremap k gk
